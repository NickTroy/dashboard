<tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.slug %></td>
  <td><%= product.meta_description %></td>
  <td><%= product.meta_keywords %></td>
  <td><%= product.publish_date.strftime('%d-%m-%y') %></td>
  <td><%= product.vendor.first_name %></td>
  <td><%= link_to 'Show', admin_product_path(product), remote: true %></td>
  <td><%= link_to 'Edit', edit_admin_product_path(product), remote: true %></td>
  <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
</tr>