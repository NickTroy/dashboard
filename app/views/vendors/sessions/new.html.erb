<div class="login-panel panel panel-default plain animated bounceIn">
 <div class="panel-heading">
   <h4 class="panel-title text-center">
     <img id="logo" src="/assets/logo-dark.png" alt="Dynamic logo">
   </h4>
 </div>
 <div class="panel-body">
   <%= form_for resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-horizontal mt0", id: "login-form" ,:role=>"form"} do |f| %>
     <%- flash.each do |name, msg| -%>
       <%= content_tag :div, msg, id: "flash_#{name}" %>
     <%- end -%>
     <div class="form-group">
       <div class="col-lg-12">
         <div class="input-group input-icon">
           <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
           <%= f.email_field :email, class: "form-control", placeholder: "Your email ...", :required => true %>
         </div>
       </div>
     </div>
     <div class="form-group">
       <div class="col-lg-12">
         <div class="input-group input-icon">
           <span class="input-group-addon"><i class="fa fa-key"></i></span>
           <%= f.password_field :password, class: "form-control", placeholder: "Your password", autocomplete: "off", :required => true %>
         </div>
         <span class="help-block text-right"><%= link_to "Forgot spassword?", new_password_path(resource_name) %></span> 
       </div>
     </div>
     <div class="form-group mb0">
       <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
         <div class="checkbox-custom"> 
           <input type="checkbox" name="remember" id="remember" value="option">
           <label for="remember">Remember me ?</label>
         </div>
       </div>
       <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 mb25">
         <button class="btn btn-default pull-right" type="submit">Login</button>
       </div>
     </div>
   <% end%>
   <div class="seperator">
     <strong>or</strong>
     <hr>
   </div>
   <div class="social-buttons text-center mt5 mb5">
     <a href="#" class="btn btn-primary btn-alt mr10">Sign in with <i class="fa fa-facebook s20 ml5 mr0"></i></a> 
     <a href="#" class="btn btn-danger btn-alt ml10">Sign in with <i class="fa fa-google-plus s20 ml5 mr0"></i></a> 
   </div>
 </div>
 <div class="panel-footer gray-lighter-bg bt">
   <h4 class="text-center"><strong>Don`t have an account ?</strong></h4>
   <p class="text-center"><a href="<%= new_vendor_registration_path%>" class="btn btn-primary">Create account</a></p>
 </div>
</div>

<script type="text/javascript">
 $(document).ready(function(){
   $('.login-form').validate();
 });
</script>